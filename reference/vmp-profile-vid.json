{
  "openapi": "3.1.0",
  "info": {
    "title": "vmp-profile-vid",
    "version": "1.0",
    "description": "Модуль \"Доступные профили и виды ВМП\""
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/users/{userId}": {
      "parameters": [
        {
          "schema": {
            "type": "integer"
          },
          "name": "userId",
          "in": "path",
          "required": true,
          "description": "Id of an existing user."
        }
      ],
      "get": {
        "summary": "Get User Info by User ID",
        "tags": [],
        "responses": {
          "200": {
            "description": "User Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                },
                "examples": {
                  "Get User Alice Smith": {
                    "value": {
                      "id": 142,
                      "firstName": "Alice",
                      "lastName": "Smith",
                      "email": "alice.smith@gmail.com",
                      "dateOfBirth": "1997-10-31",
                      "emailVerified": true,
                      "signUpDate": "2019-08-24"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User Not Found"
          }
        },
        "operationId": "get-users-userId",
        "description": "Retrieve the information of the user with the matching user ID."
      },
      "patch": {
        "summary": "Update User Information",
        "operationId": "patch-users-userId",
        "responses": {
          "200": {
            "description": "User Updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                },
                "examples": {
                  "Updated User Rebecca Baker": {
                    "value": {
                      "id": 13,
                      "firstName": "Rebecca",
                      "lastName": "Baker",
                      "email": "rebecca@gmail.com",
                      "dateOfBirth": "1985-10-02",
                      "emailVerified": false,
                      "createDate": "2019-08-24"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User Not Found"
          },
          "409": {
            "description": "Email Already Taken"
          }
        },
        "description": "Update the information of an existing user.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "lastName": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "description": "If a new email is given, the user's email verified property will be set to false."
                  },
                  "dateOfBirth": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "Update First Name": {
                  "value": {
                    "firstName": "Rebecca"
                  }
                },
                "Update Email": {
                  "value": {
                    "email": "rebecca@gmail.com"
                  }
                },
                "Update Last Name & Date of Birth": {
                  "value": {
                    "lastName": "Baker",
                    "dateOfBirth": "1985-10-02"
                  }
                }
              }
            }
          },
          "description": "Patch user properties to update."
        }
      }
    },
    "/user": {
      "post": {
        "summary": "Create New User",
        "operationId": "post-user",
        "responses": {
          "200": {
            "description": "User Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                },
                "examples": {
                  "New User Bob Fellow": {
                    "value": {
                      "id": 12,
                      "firstName": "Bob",
                      "lastName": "Fellow",
                      "email": "bob.fellow@gmail.com",
                      "dateOfBirth": "1996-08-24",
                      "emailVerified": false,
                      "createDate": "2020-11-18"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing Required Information"
          },
          "409": {
            "description": "Email Already Taken"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "lastName": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "dateOfBirth": {
                    "type": "string",
                    "format": "date"
                  }
                },
                "required": [
                  "firstName",
                  "lastName",
                  "email",
                  "dateOfBirth"
                ]
              },
              "examples": {
                "Create User Bob Fellow": {
                  "value": {
                    "firstName": "Bob",
                    "lastName": "Fellow",
                    "email": "bob.fellow@gmail.com",
                    "dateOfBirth": "1996-08-24"
                  }
                }
              }
            }
          },
          "description": "Post the necessary fields for the API to create a new user."
        },
        "description": "Create a new user."
      }
    },
    "/ProfileVid": {
      "get": {
        "summary": "Your GET endpoint",
        "tags": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProfileVid"
                }
              }
            }
          }
        },
        "operationId": "get-ProfileVid",
        "description": "Получение списка \"Доступных профилей и видов\"",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "year",
            "description": "Год",
            "required": true
          },
          {
            "schema": {
              "type": "integer"
            },
            "in": "query",
            "name": "razdel",
            "description": "Раздел. Признак, определяющий включение ВМП в базовую программу обязательного медицинского страхования (1 – включена; 2 – не включена)",
            "required": true
          },
          {
            "schema": {
              "type": "integer"
            },
            "in": "query",
            "name": "mo",
            "description": "Организация"
          },
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "status",
            "description": "Статус"
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "title": "User",
        "type": "object",
        "description": "",
        "examples": [
          {
            "id": 142,
            "firstName": "Alice",
            "lastName": "Smith",
            "email": "alice.smith@gmail.com",
            "dateOfBirth": "1997-10-31",
            "emailVerified": true,
            "signUpDate": "2019-08-24"
          }
        ],
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the given user."
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "dateOfBirth": {
            "type": "string",
            "format": "date",
            "example": "1997-10-31"
          },
          "emailVerified": {
            "type": "boolean",
            "description": "Set to true if the user's email has been verified."
          },
          "createDate": {
            "type": "string",
            "format": "date",
            "description": "The date that the user was created."
          }
        },
        "required": [
          "id",
          "firstName",
          "lastName",
          "email",
          "emailVerified"
        ]
      },
      "ProfileVid": {
        "title": "ProfileVid - link",
        "type": "object",
        "description": "Модель с \"Доступными профилями и видами\". Данные брать из таблиц: mz_register_vmp.ref_vmp_vid_profile + mz_register_vmp.ticket_mo_vid. Лефт Джоинить по razdel + id_vid + вхождение year в период действия записи в НСИ.",
        "x-internal": false,
        "properties": {
          "id": {
            "description": "Уникальный идентификатор заявки (Номер заявки)",
            "type": "integer"
          },
          "create_date": {
            "type": "string",
            "description": "Дата заявки"
          },
          "organization": {
            "type": "object",
            "description": "Организация пользователя (ref_organization), Модель из общего модуля организаций."
          },
          "year": {
            "type": "string",
            "description": "Год действия записи"
          },
          "status": {
            "$ref": "#/components/schemas/StatusProfileVid"
          },
          "otkaz_reason": {
            "type": "string",
            "description": "Причина отказа в утверждении"
          },
          "license": {
            "$ref": "#/components/schemas/License"
          },
          "profile_vid": {
            "$ref": "#/components/schemas/ProfileVid - mat view"
          },
          "chekbox": {
            "type": "boolean",
            "description": "Признак, определяющий состояние чек бокса на фронте (true = выбран)"
          },
          "marker": {
            "type": "string",
            "description": "Признак, определяющий необходимость подсвечивания информации на фронте. Определяется относительно ранее утверждённого списка (red - если запись была удалена; green - если запись была добавлена)"
          }
        },
        "required": [
          "id",
          "create_date",
          "organization",
          "year",
          "status",
          "profile_vid",
          "chekbox"
        ]
      },
      "ProfileVid - mat view": {
        "title": "ProfileVid",
        "type": "object",
        "description": "Справочник \"Доступные профили и виды\" (Мат вью из справочника НСИ) - mz_register_vmp.ref_vmp_vid_profile",
        "properties": {
          "id_profile": {
            "description": "Идентификатор профиля оказываемой МП",
            "type": "integer"
          },
          "name_profile": {
            "type": "string",
            "description": "Наименование профиля оказываемой МП"
          },
          "group": {
            "type": "integer",
            "description": "Группа ВМП"
          },
          "id_vid": {
            "type": "integer",
            "description": "Идентификатор вида ВМП"
          },
          "name_vid": {
            "type": "string",
            "description": "Наименование вида ВМП"
          },
          "razdel": {
            "type": "integer",
            "description": "Раздел. Определяет включение ВМП в базовую программу ОМС: 1 - включена; 2 - не включена"
          },
          "date_begin": {
            "type": "string",
            "description": "Дата начала действия записи"
          },
          "date_end": {
            "type": "string",
            "description": "Дата окончания действия записи"
          }
        },
        "required": [
          "id_profile",
          "name_profile",
          "group",
          "id_vid",
          "name_vid",
          "razdel",
          "date_begin",
          "date_end"
        ]
      },
      "StatusProfileVid": {
        "title": "StatusProfileVid",
        "type": "object",
        "description": "Справочник \"Статус согласования видов ВМП\" - mz_nsi_directory.ref_vmp_vid_status",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Уникальный идентификатор статуса согласования вида ВМП"
          },
          "name": {
            "type": "string",
            "description": "Наименование статуса согласования вида ВМП"
          }
        },
        "required": [
          "id",
          "name"
        ]
      },
      "License": {
        "title": "License",
        "type": "object",
        "description": "Лицензии организаций ВМП - mz_register_vmp.link_mo_license",
        "properties": {
          "id": {
            "description": "Уникальный идентификатор лицензии",
            "type": "integer"
          },
          "name": {
            "type": "string",
            "description": "Наименование файла лицензии"
          },
          "date": {
            "type": "string",
            "description": "Дата выдачи лицензии"
          },
          "license": {
            "type": "object",
            "description": "Файл лицензии"
          }
        },
        "required": [
          "id",
          "name",
          "date",
          "license"
        ]
      }
    }
  }
}