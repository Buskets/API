  "components": {
    "schemas": {
      "TicketProfileVid": {
        "title": "TicketProfileVid",
        "type": "object",
        "description": "Модель для работы с заявками на утверждение \"Доступных профилей и видов\". Данные для формировании модели брать из таблиц: mz_register_vmp.ref_vmp_vid_profile + mz_register_vmp.ticket_mo_vid. Лефт Джоинить по razdel + id_vid + вхождение year в период действия записи в НСИ.",
        "x-internal": false,
        "properties": {
          "id": {
            "description": "Уникальный идентификатор заявки (Номер заявки)",
            "type": "integer"
          },
          "create_date": {
            "type": "string",
            "description": "Дата заявки"
          },
          "organization": {
            "type": "object",
            "description": "Организация пользователя (ref_organization), Модель из общего модуля организаций."
          },
          "year": {
            "type": "string",
            "description": "Год действия записи"
          },
          "razdel": {
            "type": "integer",
            "description": "Раздел. Определяет включение ВМП в базовую программу ОМС: 1 - включена; 2 - не включена"
          },
          "id_profile": {
            "type": "integer",
            "description": "Идентификатор профиля оказываемой МП"
          },
          "name_profile": {
            "type": "string",
            "description": "Наименование профиля оказываемой МП"
          },
          "group": {
            "type": "integer",
            "description": "Группа ВМП"
          },
          "id_vid": {
            "type": "integer",
            "description": "Идентификатор вида ВМП"
          },
          "name_vid": {
            "type": "string",
            "description": "Наименование вида ВМП"
          },
          "status": {
            "$ref": "#/components/schemas/StatusProfileVid"
          },
          "otkaz_reason": {
            "type": "string",
            "description": "Причина отказа в утверждении"
          },
          "license": {
            "$ref": "#/components/schemas/License"
          },
          "chekbox": {
            "type": "boolean",
            "description": "Признак, определяющий состояние чек бокса на фронте (true = выбран)"
          },
          "marker": {
            "type": "string",
            "description": "Признак, определяющий необходимость подсвечивания информации на фронте. Определяется относительно ранее утверждённого списка (red - если запись была удалена; green - если запись была добавлена)"
          }
        },
        "required": [
          "id",
          "create_date",
          "organization",
          "year",
          "razdel",
          "id_profile",
          "name_profile",
          "group",
          "id_vid",
          "name_vid",
          "status",
          "chekbox"
        ]
      },
      "TicketProfileVid2": {
        "title": "TicketProfileVid2",
        "type": "object",
        "description": "Модель для создания заявок на утверждение \"Доступных профилей и видов\". Данные для формировании модели брать из таблиц: mz_register_vmp.ref_vmp_vid_profile + mz_register_vmp.link_mo_vid. Лефт Джоинить по razdel + id_vid + вхождение year в период действия записи в НСИ + mz_register_vmp.link_mo_vid.id_organizatioin=Оргазация пользователя.",
        "x-internal": false,
        "properties": {
          "year": {
            "type": "string",
            "description": "Год действия записи"
          },
          "razdel": {
            "type": "integer",
            "description": "Раздел. Определяет включение ВМП в базовую программу ОМС: 1 - включена; 2 - не включена"
          },
          "id_profile": {
            "type": "integer",
            "description": "Идентификатор профиля оказываемой МП"
          },
          "name_profile": {
            "type": "string",
            "description": "Наименование профиля оказываемой МП"
          },
          "group": {
            "type": "integer",
            "description": "Группа ВМП"
          },
          "id_vid": {
            "type": "integer",
            "description": "Идентификатор вида ВМП"
          },
          "name_vid": {
            "type": "string",
            "description": "Наименование вида ВМП"
          },
          "chekbox": {
            "type": "boolean",
            "description": "Признак, определяющий состояние чек бокса на фронте (true = выбран)"
          }
        },
        "required": [
          "year",
          "razdel",
          "id_profile",
          "name_profile",
          "group",
          "id_vid",
          "name_vid",
          "chekbox"
        ]
      },
